---
import { getLangFromUrl, useTranslations, translatePath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();

const footerLinks = {
  navegacion: [
    { name: t('nav.home'), href: translatePath('/', lang) },
    { name: t('nav.products'), href: translatePath('/productos', lang) },
    { name: t('nav.history'), href: translatePath('/historia', lang) },
    { name: t('nav.contact'), href: translatePath('/contacto', lang) },
  ],
  legal: [
    { name: t('footer.privacyPolicy'), href: translatePath('/privacidad', lang) },
    { name: t('footer.termsConditions'), href: translatePath('/terminos', lang) },
    { name: t('footer.cookiePolicy'), href: translatePath('/cookies', lang) },
  ],
  social: [
    { name: 'Instagram', href: 'https://instagram.com/elematt', icon: 'instagram' },
    { name: 'Pinterest', href: 'https://pinterest.com/elematt', icon: 'pinterest' },
    { name: 'Facebook', href: 'https://facebook.com/elematt', icon: 'facebook' },
    { name: 'TikTok', href: 'https://tiktok.com/@elematt', icon: 'tiktok' },
  ],
};
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Columna 1: Marca -->
      <div class="footer-column">
        <h3 class="footer-logo">ELEMATT</h3>
        <p class="footer-description">
          {t('footer.description')}
        </p>
        <a href={translatePath('/historia', lang)} class="footer-link-brand">{t('nav.history')}</a>
      </div>

      <!-- Columna 2: Navegación -->
      <div class="footer-column">
        <h4 class="footer-title">{t('footer.navigation')}</h4>
        <ul class="footer-links">
          {footerLinks.navegacion.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.name}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Columna 3: Legal -->
      <div class="footer-column">
        <h4 class="footer-title">{t('footer.legal')}</h4>
        <ul class="footer-links">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.name}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Columna 4: Social -->
      <div class="footer-column">
        <h4 class="footer-title">{t('footer.followUs')}</h4>
        <div class="social-links">
          {footerLinks.social.map((link) => (
            <a href={link.href} class="social-link" aria-label={link.name} target="_blank" rel="noopener noreferrer">
              {link.icon === 'instagram' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {link.icon === 'pinterest' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.401.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.39 18.592.026 11.985.026L12.017 0z"/>
                </svg>
              )}
              {link.icon === 'facebook' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {link.icon === 'tiktok' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="copyright">
        © {currentYear} ELEMATT. {t('footer.copyright')}
      </p>
      <p class="affiliate-disclaimer">
        {t('footer.amazonDisclaimer')}
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-salvia);
    color: var(--color-blanco);
    padding: var(--spacing-xl) 0 var(--spacing-md);
    margin-top: var(--spacing-xl);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer-logo {
    font-family: var(--font-primary);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-melon);
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-xs);
  }

  .footer-description {
    font-family: var(--font-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-lino);
    opacity: 0.9;
  }

  .footer-title {
    font-family: var(--font-primary);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-melon);
    margin-bottom: var(--spacing-xs);
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    font-family: var(--font-secondary);
    font-size: 0.95rem;
    color: var(--color-lino);
    text-decoration: none;
    opacity: 0.9;
    transition: all var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-melon);
    opacity: 1;
    padding-left: 0.5rem;
  }

  .footer-link-brand {
    font-family: var(--font-secondary);
    font-size: 0.95rem;
    color: var(--color-melon);
    text-decoration: none;
    opacity: 0.9;
    transition: all var(--transition-fast);
    margin-top: var(--spacing-xs);
    display: inline-block;
  }

  .footer-link-brand:hover {
    opacity: 1;
    transform: translateX(5px);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: var(--spacing-sm);
  }

  .social-link {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-blanco);
    text-decoration: none;
    transition: all var(--transition-normal);
  }

  .social-link:hover {
    background-color: var(--color-melon-dark);
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 4px 12px rgba(244, 194, 184, 0.4);
  }

  .social-icon {
    width: 22px;
    height: 22px;
    transition: all var(--transition-fast);
  }

  .social-link:hover .social-icon {
    transform: scale(1.1);
  }



  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: var(--spacing-md);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .copyright,
  .affiliate-disclaimer {
    font-family: var(--font-secondary);
    font-size: 0.875rem;
    color: var(--color-lino);
    opacity: 0.8;
  }

  /* Responsive - Mobile First */
  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-column {
      text-align: center;
    }

    .footer-logo {
      font-size: 1.75rem;
    }

    .footer-description {
      font-size: 0.9375rem;
      line-height: 1.7;
    }

    .social-links {
      justify-content: center;
    }

    .social-link {
      width: 44px;
      height: 44px;
    }

    .footer-title {
      font-size: 1.125rem;
    }

    .footer-link {
      font-size: 0.9375rem;
      padding: 0.625rem 0;
    }



    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      padding-top: 2rem;
    }

    .copyright,
    .affiliate-disclaimer {
      font-size: 0.8125rem;
      line-height: 1.6;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 2.5rem 0 1.5rem;
    }

    .footer-content {
      gap: 2rem;
    }

    .footer-logo {
      font-size: 1.5rem;
    }
  }
</style>
