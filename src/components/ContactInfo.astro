---
import Icon from './Icon.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="contacto-info">
  <h2>{t('contact.howCanWeHelp')}</h2>
  <p class="info-description">
    {t('contact.infoDescription')}
  </p>

  <div class="info-items">
    <div class="info-item">
      <div class="info-icon">
        <Icon name="envelope" size={32} />
      </div>
      <div class="info-content">
        <h3>{t('contact.email')}</h3>
        <a href="mailto:hola@elematt.com">hola@elematt.com</a>
      </div>
    </div>

    <div class="info-item">
      <div class="info-icon">
        <Icon name="clock" size={32} />
      </div>
      <div class="info-content">
        <h3>{t('contact.schedule')}</h3>
        <p>{t('contact.scheduleWeekdays')}</p>
        <p>{t('contact.scheduleSaturday')}</p>
      </div>
    </div>

    <div class="info-item">
      <div class="info-icon">
        <Icon name="chat-bubble" size={32} />
      </div>
      <div class="info-content">
