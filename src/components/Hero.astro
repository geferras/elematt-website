---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
  overlay?: boolean;
  particles?: boolean;
}

const {
  title,
  subtitle,
  description,
  ctaText = "Explorar",
  ctaLink = "/historia",
  backgroundImage,
  overlay = true,
  particles = true,
} = Astro.props;
---

<section class="hero" style={backgroundImage ? `background-image: url(${backgroundImage})` : ''}>
  {/* Partículas flotantes */}
  {particles && (
    <div class="hero-particles" aria-hidden="true">
      {Array.from({ length: 25 }).map((_, i) => (
        <div class="particle" style={`
          left: ${Math.random() * 100}%;
          top: ${Math.random() * 100}%;
          animation-delay: ${Math.random() * 5}s;
          animation-duration: ${15 + Math.random() * 10}s;
        `}></div>
      ))}
    </div>
  )}

  {/* Overlay con gradiente animado */}
  {overlay && <div class="hero-overlay"></div>}

  <div class="container">
    <div class="hero-content">
      {subtitle && <p class="hero-subtitle animate-fade-in">{subtitle}</p>}
      <h1 class="hero-title animate-slide-up">{title}</h1>
      {description && <p class="hero-description animate-fade-in">{description}</p>}
      {ctaText && (
        <div class="hero-cta animate-slide-up">
          <a href={ctaLink} class="btn btn-primary btn-animated">
            {ctaText}
            <svg class="btn-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  /* ===== HERO CONTAINER ===== */
  .hero {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-perla);
    background-size: cover;
    background-position: center top -15px; /* Recortar 15px superior */
    background-repeat: no-repeat;
    background-attachment: fixed; /* Parallax effect */
    overflow: hidden;
  }

  /* ===== PARTÍCULAS FLOTANTES ===== */
  .hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: 8px;
    height: 8px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: float-particle linear infinite;
    will-change: transform, opacity;
  }

  @keyframes float-particle {
    0% {
      transform: translateY(0) translateX(0) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 0.6;
    }
    90% {
      opacity: 0.6;
    }
    100% {
      transform: translateY(-100vh) translateX(50px) scale(0.5);
      opacity: 0;
    }
  }

  /* ===== OVERLAY CON GRADIENTE ANIMADO ===== */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(108, 128, 107, 0.7) 0%,
      rgba(231, 180, 157, 0.6) 100%
    );
    z-index: 2;
    animation: gradient-shift 10s ease-in-out infinite alternate;
  }

  @keyframes gradient-shift {
    0% {
      background: linear-gradient(
        135deg,
        rgba(108, 128, 107, 0.7) 0%,
        rgba(231, 180, 157, 0.6) 100%
      );
    }
    100% {
      background: linear-gradient(
        135deg,
        rgba(168, 181, 160, 0.6) 0%,
        rgba(244, 194, 184, 0.7) 100%
      );
    }
  }

  /* ===== CONTENIDO ===== */
  .container {
    position: relative;
    z-index: 3;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-lg) var(--spacing-md);
  }

  /* ===== ANIMACIONES DE ENTRADA ===== */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-up {
    animation: slideUp 1s ease-out forwards;
    opacity: 0;
  }

  /* ===== TEXTO ===== */
  .hero-subtitle {
    font-family: var(--font-secondary);
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--color-melon);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: var(--spacing-sm);
    animation-delay: 0.2s;
  }

  .hero-title {
    font-family: var(--font-primary);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--color-blanco);
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
    text-shadow: 3px 3px 12px rgba(0, 0, 0, 0.7), 1px 1px 4px rgba(0, 0, 0, 0.9);
    animation-delay: 0.4s;
  }

  .hero-description {
    font-family: var(--font-secondary);
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    color: var(--color-lino);
    line-height: 1.8;
    margin-bottom: var(--spacing-lg);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    animation-delay: 0.6s;
  }

  .hero-cta {
    animation-delay: 0.8s;
  }

  /* ===== BOTÓN ANIMADO ===== */
  .btn-animated {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .btn-animated::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn-animated:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-animated:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(108, 128, 107, 0.4);
  }

  .btn-arrow {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .btn-animated:hover .btn-arrow {
    transform: translateX(5px);
  }

  /* ===== VARIANTE SIN IMAGEN DE FONDO ===== */
  .hero:not([style*="background-image"]) {
    background: linear-gradient(
      135deg,
      var(--color-salvia) 0%,
      var(--color-melon) 100%
    );
  }

  .hero:not([style*="background-image"]) .hero-title {
    color: var(--color-blanco);
  }

  .hero:not([style*="background-image"]) .hero-subtitle {
    color: var(--color-lino);
  }

  .hero:not([style*="background-image"]) .hero-description {
    color: var(--color-blanco);
  }

  /* ===== ACCESIBILIDAD: Reducir movimiento ===== */
  @media (prefers-reduced-motion: reduce) {
    .hero {
      background-attachment: scroll; /* Desactivar parallax */
    }

    .particle,
    .hero-overlay,
    .animate-fade-in,
    .animate-slide-up,
    .btn-animated,
    .btn-arrow {
      animation: none !important;
      transition: none !important;
    }

    .animate-fade-in,
    .animate-slide-up {
      opacity: 1 !important;
      transform: none !important;
    }
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .hero {
      min-height: 420px;
      background-attachment: scroll;
      background-position: center center;
    }

    .hero-content {
      padding: 2rem 1rem;
    }

    .hero-subtitle {
      font-size: 0.875rem;
      letter-spacing: 0.1em;
      margin-bottom: 0.75rem;
    }

    .hero-title {
      font-size: 1.75rem;
      margin-bottom: 1rem;
      line-height: 1.25;
    }

    .hero-description {
      font-size: 1rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .particle {
      width: 6px;
      height: 6px;
    }

    .btn {
      padding: 0.875rem 1.75rem;
      font-size: 0.9375rem;
    }

    .btn-arrow {
      width: 18px;
      height: 18px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      min-height: 380px;
    }

    .hero-content {
      padding: 1.5rem 0.875rem;
    }

    .hero-title {
      font-size: 1.5rem;
    }

    .hero-description {
      font-size: 0.9375rem;
    }

    .particle {
      display: none;
    }
  }
</style>

<script>
  // Detectar si el usuario prefiere reducir movimiento
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  if (!prefersReducedMotion) {
    // Parallax scroll effect
    window.addEventListener('scroll', () => {
      const hero = document.querySelector('.hero') as HTMLElement;
      if (!hero) return;

      const scrolled = window.pageYOffset;
      const heroHeight = hero.offsetHeight;

      // Solo aplicar parallax si el hero está visible
      if (scrolled < heroHeight) {
        hero.style.backgroundPositionY = `${scrolled * 0.5}px`;
      }
    });
  }
</script>

