---
/**
 * ProductSafetyNotice - COMPONENTE CRÍTICO
 * 
 * Información de seguridad obligatoria visible en todas las páginas de producto.
 * NO modificar sin revisar PRODUCT_PAGE_MASTER.md
 * 
 * Requisitos:
 * - Visible sin scroll (above the fold)
 * - No requiere interacción
 * - Presente en TODAS las páginas de producto
 * - Traducido a 6 idiomas
 */

import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import Icon from '../Icon.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="safety-notice">
  <p class="safety-notice__text">
    <strong>{t('product.safety.title')}</strong> {t('product.safety.bagWarning')}
  </p>
</div>

<style>
  .safety-notice {
    max-width: 1200px;
    margin: 0 auto 1.5rem auto;
    padding: 0 1rem;
  }

  .safety-notice__text {
    font-family: 'Nunito', sans-serif;
    font-size: 0.875rem;
    font-weight: 400;
    color: #666;
    margin: 0;
    line-height: 1.6;
    text-align: center;
  }

  .safety-notice__text strong {
    font-weight: 600;
    color: #4A4A4A;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .safety-notice {
      padding: 0 0.75rem;
      margin-bottom: 1rem;
    }

    .safety-notice__text {
      font-size: 0.8125rem;
      line-height: 1.5;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .safety-notice {
      margin-bottom: 2rem;
    }

    .safety-notice__text {
      font-size: 0.9375rem;
    }
  }
</style>

