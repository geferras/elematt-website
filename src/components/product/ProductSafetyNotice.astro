---
/**
 * ProductSafetyNotice - COMPONENTE CRÍTICO
 * 
 * Información de seguridad obligatoria visible en todas las páginas de producto.
 * NO modificar sin revisar PRODUCT_PAGE_MASTER.md
 * 
 * Requisitos:
 * - Visible sin scroll (above the fold)
 * - No requiere interacción
 * - Presente en TODAS las páginas de producto
 * - Traducido a 6 idiomas
 */

import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import Icon from '../Icon.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="safety-notice">
  <div class="safety-notice__container">
    <div class="safety-notice__icon" aria-hidden="true">
      <Icon name="alert-triangle" size={24} />
    </div>

    <div class="safety-notice__content">
      <p class="safety-notice__text">
        <strong class="safety-notice__title">{t('product.safety.title')}</strong> {t('product.safety.bagWarning')}
      </p>
    </div>
  </div>
</div>

<style>
  .safety-notice {
    background: #FFF9F5;
    border-left: 4px solid #D4A574;
    padding: 1rem 1.25rem;
    margin: 0 auto 2rem auto;
    max-width: 1200px;
  }

  .safety-notice__container {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .safety-notice__icon {
    flex-shrink: 0;
    color: #D4A574;
    margin-top: 0.125rem;
  }

  .safety-notice__icon svg {
    width: 24px;
    height: 24px;
  }

  .safety-notice__content {
    flex: 1;
  }

  .safety-notice__text {
    font-family: 'Nunito', sans-serif;
    font-size: 0.9375rem;
    font-weight: 400;
    color: #4A4A4A;
    margin: 0;
    line-height: 1.6;
  }

  .safety-notice__title {
    font-weight: 600;
    color: #2C2C2C;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .safety-notice {
      padding: 0.875rem 1rem;
      margin: 0 0.75rem 1.5rem 0.75rem;
    }

    .safety-notice__container {
      gap: 0.75rem;
    }

    .safety-notice__icon svg {
      width: 20px;
      height: 20px;
    }

    .safety-notice__text {
      font-size: 0.875rem;
      line-height: 1.5;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .safety-notice {
      padding: 1.25rem 1.5rem;
      margin-bottom: 2.5rem;
    }

    .safety-notice__text {
      font-size: 1rem;
    }
  }
</style>

