---
/**
 * ProductSafetyNotice - COMPONENTE CRÍTICO
 * 
 * Información de seguridad obligatoria visible en todas las páginas de producto.
 * NO modificar sin revisar PRODUCT_PAGE_MASTER.md
 * 
 * Requisitos:
 * - Visible sin scroll (above the fold)
 * - No requiere interacción
 * - Presente en TODAS las páginas de producto
 * - Traducido a 6 idiomas
 */

import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import Icon from '../Icon.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="safety-notice">
  <div class="safety-notice__container">
    <div class="safety-notice__icon" aria-hidden="true">
      <Icon name="alert-triangle" size={24} />
    </div>

    <div class="safety-notice__content">
      <p class="safety-notice__text">
        <strong class="safety-notice__title">{t('product.safety.title')}</strong> {t('product.safety.bagWarning')}
      </p>
    </div>
  </div>
</div>

<style>
  .safety-notice {
    background: linear-gradient(135deg, #FFF9F5 0%, #FFF5EE 100%);
    border-left: 4px solid #FF8C42;
    border-radius: 8px;
    padding: 1rem 1.25rem;
    margin: 0 auto 2rem auto;
    max-width: 1200px;
    box-shadow: 0 2px 8px rgba(255, 140, 66, 0.1);
  }

  .safety-notice__container {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .safety-notice__icon {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #FF8C42;
    border-radius: 50%;
    color: white;
  }

  .safety-notice__icon svg {
    width: 20px;
    height: 20px;
  }

  .safety-notice__content {
    flex: 1;
  }

  .safety-notice__text {
    font-family: 'Nunito', sans-serif;
    font-size: 0.9375rem;
    font-weight: 400;
    color: #6B4423;
    margin: 0;
    line-height: 1.6;
  }

  .safety-notice__title {
    font-weight: 700;
    color: #C85A28;
  }

  /* Mobile - Optimized for visibility */
  @media (max-width: 768px) {
    .safety-notice {
      padding: 1rem 1.25rem;
      margin: 0 0.875rem 1.5rem 0.875rem;
      border-radius: 10px;
    }

    .safety-notice__container {
      gap: 0.875rem;
    }

    .safety-notice__icon {
      width: 28px;
      height: 28px;
    }

    .safety-notice__icon svg {
      width: 18px;
      height: 18px;
    }

    .safety-notice__text {
      font-size: 0.875rem;
      line-height: 1.5;
    }
  }

  /* Extra small devices */
  @media (max-width: 430px) {
    .safety-notice {
      padding: 0.875rem 1rem;
      margin: 0 0.75rem 1.25rem 0.75rem;
    }

    .safety-notice__container {
      gap: 0.75rem;
    }

    .safety-notice__text {
      font-size: 0.8125rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .safety-notice {
      padding: 1.25rem 1.5rem;
      margin-bottom: 2.5rem;
    }

    .safety-notice__text {
      font-size: 1rem;
    }
  }
</style>

