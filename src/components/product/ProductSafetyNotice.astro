---
/**
 * ProductSafetyNotice - COMPONENTE CRÍTICO
 * 
 * Información de seguridad obligatoria visible en todas las páginas de producto.
 * NO modificar sin revisar PRODUCT_PAGE_MASTER.md
 * 
 * Requisitos:
 * - Visible sin scroll (above the fold)
 * - No requiere interacción
 * - Presente en TODAS las páginas de producto
 * - Traducido a 6 idiomas
 */

import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="safety-notice">
  <div class="safety-notice__container">
    <div class="safety-notice__icon" aria-hidden="true">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
        <line x1="12" y1="9" x2="12" y2="13"></line>
        <line x1="12" y1="17" x2="12.01" y2="17"></line>
      </svg>
    </div>
    
    <div class="safety-notice__content">
      <h2 class="safety-notice__title">
        {t('product.safety.title')}
      </h2>
      <p class="safety-notice__text">
        {t('product.safety.bagWarning')}
      </p>
    </div>
  </div>
</div>

<style>
  .safety-notice {
    background: linear-gradient(135deg, #FEF9F3 0%, #FEFDFB 100%);
    border: 2px solid #E8DCC8;
    border-radius: 12px;
    padding: 1.5rem;
    margin: 0 auto 2rem auto;
    max-width: 1200px;
    box-shadow: 0 4px 12px rgba(139, 157, 131, 0.15);
    position: relative;
    z-index: 100;
  }

  .safety-notice__container {
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
  }

  .safety-notice__icon {
    flex-shrink: 0;
    color: #D4A574;
    margin-top: 0.25rem;
  }

  .safety-notice__icon svg {
    width: 32px;
    height: 32px;
  }

  .safety-notice__content {
    flex: 1;
  }

  .safety-notice__title {
    font-family: 'Poppins', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #4A4A4A;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .safety-notice__text {
    font-family: 'Nunito', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #4A4A4A;
    margin: 0;
    line-height: 1.7;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .safety-notice {
      padding: 1.25rem;
      margin: 1.5rem 1rem;
      border-radius: 10px;
    }

    .safety-notice__container {
      gap: 1rem;
    }

    .safety-notice__icon svg {
      width: 28px;
      height: 28px;
    }

    .safety-notice__title {
      font-size: 1.125rem;
    }

    .safety-notice__text {
      font-size: 0.9375rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .safety-notice {
      padding: 2rem 2.5rem;
      margin: 2.5rem auto;
    }

    .safety-notice__title {
      font-size: 1.375rem;
    }

    .safety-notice__text {
      font-size: 1.0625rem;
    }
  }

  /* Accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .safety-notice {
      transition: none;
    }
  }

  /* Alto contraste */
  @media (prefers-contrast: high) {
    .safety-notice {
      border-width: 3px;
      border-color: #4A4A4A;
    }
  }
</style>

