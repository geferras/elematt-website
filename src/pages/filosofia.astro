<style>
  /* Introducci√≥n */
  .intro-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .intro-text {
    font-family: var(--font-secondary);
    font-size: 1.3rem;
    line-height: 2;
    color: var(--color-gris-oscuro);
    text-align: center;
  }

  /* Valores Grid */
  .valores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
  }

  .valor-card {
    background-color: var(--color-blanco);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
  }

  .valor-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .valor-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .valor-card h3 {
    font-family: var(--font-primary);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: var(--spacing-sm);
  }

  .valor-card p {
    font-family: var(--font-secondary);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-gris-oscuro);
  }

  /* Proceso */
  .proceso-content {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .proceso-step {
    display: flex;
    gap: var(--spacing-md);
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-salvia), var(--color-melon));
    color: var(--color-blanco);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-primary);
    font-size: 1.5rem;
    font-weight: 700;
  }

  .step-content h3 {
    font-family: var(--font-primary);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: 0.5rem;
  }

  .step-content p {
    font-family: var(--font-secondary);
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-gris-oscuro);
  }

  /* Manifiesto */
  .manifiesto-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .manifiesto-title {
    font-family: var(--font-primary);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-salvia);
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .manifiesto-text {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .manifiesto-text p {
    font-family: var(--font-secondary);
    font-size: 1.2rem;
    line-height: 1.9;
    color: var(--color-gris-oscuro);
    text-align: center;
    font-style: italic;
  }

  .manifiesto-final {
    font-weight: 600;
    color: var(--color-salvia);
    font-size: 1.3rem !important;
    margin-top: var(--spacing-sm);
  }

  /* CTA Filosof√≠a */
  .cta-filosofia {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .cta-filosofia h2 {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-salvia);
  }

  .cta-filosofia p {
    font-family: var(--font-secondary);
    font-size: 1.2rem;
    color: var(--color-gris-oscuro);
    margin-bottom: var(--spacing-sm);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .valores-grid {
      grid-template-columns: 1fr;
    }

    .proceso-step {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .step-number {
      width: 60px;
      height: 60px;
      font-size: 1.2rem;
    }

    .intro-text,
    .manifiesto-text p {
      font-size: 1.1rem;
    }

    .manifiesto-title {
      font-size: 2rem;
    }
  }
</style>

