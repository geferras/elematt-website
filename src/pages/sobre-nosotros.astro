    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--spacing-lg);
  }

  .mv-card {
    background-color: var(--color-blanco);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
  }

  .mv-icon {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .mv-card h3 {
    font-family: var(--font-primary);
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: var(--spacing-sm);
  }

  .mv-card p {
    font-family: var(--font-secondary);
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-gris-oscuro);
  }

  /* Equipo */
  .equipo-intro {
    max-width: 800px;
    margin: 0 auto var(--spacing-lg);
    text-align: center;
  }

  .equipo-intro p {
    font-family: var(--font-secondary);
    font-size: 1.2rem;
    line-height: 1.9;
    color: var(--color-gris-oscuro);
  }

  .equipo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
  }

  .equipo-member {
    background-color: var(--color-blanco);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    text-align: center;
    transition: all var(--transition-normal);
  }

  .equipo-member:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .member-image {
    width: 150px;
    height: 150px;
    margin: 0 auto var(--spacing-sm);
    border-radius: 50%;
    overflow: hidden;
    background-color: var(--color-perla);
  }

  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .equipo-member h4 {
    font-family: var(--font-primary);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: 0.25rem;
  }

  .member-role {
    font-family: var(--font-primary);
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-melon);
    margin-bottom: var(--spacing-sm);
  }

  .member-bio {
    font-family: var(--font-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-gris-oscuro);
  }

