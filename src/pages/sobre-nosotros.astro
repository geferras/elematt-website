    }

    .mision-vision-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .equipo-grid {
      grid-template-columns: 1fr;
    }

    .compromiso-grid {
      grid-template-columns: 1fr;
    }

    .historia-text h2,
    .compromiso-content h2 {
      font-size: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>

