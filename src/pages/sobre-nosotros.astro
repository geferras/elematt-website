<style>
  /* Historia */
  .historia-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: center;
  }

  .historia-text h2 {
    font-family: var(--font-primary);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-salvia);
    margin-bottom: var(--spacing-md);
  }

  .historia-text p {
    font-family: var(--font-secondary);
    font-size: 1.1rem;
    line-height: 1.9;
    color: var(--color-gris-oscuro);
    margin-bottom: var(--spacing-sm);
  }

  .historia-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .historia-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Misi√≥n y Visi√≥n */
