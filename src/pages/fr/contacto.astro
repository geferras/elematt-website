---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/Hero.astro';
import Section from '@components/Section.astro';
import { useTranslations } from '@i18n/utils';

const lang = 'fr';
const t = useTranslations(lang);
---

<Layout
  title={t('contact.title')}
  description={t('contact.description')}
>

  <!-- Hero Section -->
  <Hero
    title={t('contact.heroTitle')}
    subtitle={t('contact.heroSubtitle')}
    description={t('contact.heroDescription')}
  />

  <!-- Formulario de Contacto -->
  <Section background="blanco">
    <div class="contacto-container">
      <!-- Informaci√≥n de Contacto -->
      <div class="contacto-info">
        <h2>{t('contact.howCanWeHelp')}</h2>
        <p class="info-description">
          {t('contact.infoDescription')}
        </p>

        <div class="info-items">
          <div class="info-item">
            <div class="info-icon">üìß</div>
            <div class="info-content">
              <h3>{t('contact.email')}</h3>
              <a href="mailto:soporte@elematt.com">soporte@elematt.com</a>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">‚è∞</div>
            <div class="info-content">
              <h3>{t('contact.schedule')}</h3>
              <p>{t('contact.scheduleWeekdays')}</p>
              <p>{t('contact.scheduleSaturday')}</p>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">üí¨</div>
            <div class="info-content">
              <h3>{t('contact.followUs')}</h3>
              <p class="social-description">{t('contact.joinCommunity')}</p>
              <div class="social-links-contacto">
                <a href="https://instagram.com/elematt" class="social-link-contacto" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
                <a href="https://pinterest.com/elematt" class="social-link-contacto" target="_blank" rel="noopener noreferrer" aria-label="Pinterest">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.401.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.39 18.592.026 11.985.026L12.017 0z"/>
                  </svg>
                </a>
                <a href="https://facebook.com/elematt" class="social-link-contacto" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
                <a href="https://tiktok.com/@elematt" class="social-link-contacto" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulario -->
      <div class="contacto-form-wrapper">
        <!-- Mensaje de √©xito -->
        <div id="successMessage" class="form-message form-message-success" style="display: none;">
          <svg class="message-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <h3 class="message-title">Message envoy√©!</h3>
            <p class="message-text">Merci pour votre message. Nous vous contacterons d√®s que possible.</p>
          </div>
        </div>

        <!-- Mensaje de error -->
        <div id="errorMessage" class="form-message form-message-error" style="display: none;">
          <svg class="message-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <h3 class="message-title">Erreur d'envoi</h3>
            <p class="message-text">Une erreur s'est produite. Veuillez r√©essayer.</p>
          </div>
        </div>

        <form
          class="contacto-form"
          id="contactForm"
          action="https://formspree.io/f/maqwooko"
          method="POST"
        >
          <div class="form-group">
            <label for="nombre">{t('contact.nameLabel')}</label>
            <input
              type="text"
              id="nombre"
              name="nombre"
              required
              placeholder={t('contact.namePlaceholder')}
            />
          </div>

          <div class="form-group">
            <label for="email">{t('contact.emailLabel')}</label>
            <input
              type="email"
              id="email"
              name="_replyto"
              required
              placeholder={t('contact.emailPlaceholder')}
            />
          </div>

          <div class="form-group">
            <label for="asunto">{t('contact.subjectLabel')}</label>
            <select id="asunto" name="asunto" required>
              <option value="">{t('contact.subjectPlaceholder')}</option>
              <option value="consulta-producto">{t('contact.subjectProduct')}</option>
              <option value="sugerencia">{t('contact.subjectSuggestion')}</option>
              <option value="colaboracion">{t('contact.subjectCollaboration')}</option>
              <option value="otro">{t('contact.subjectOther')}</option>
            </select>
          </div>

          <div class="form-group">
            <label for="mensaje">{t('contact.messageLabel')}</label>
            <textarea
              id="mensaje"
              name="mensaje"
              rows="6"
              required
              placeholder={t('contact.messagePlaceholder')}
            ></textarea>
          </div>

          <input type="hidden" name="_subject" value="Nouveau message d'ELEMATT (FR)" />
          <input type="text" name="_gotcha" style="display:none" />

          <div class="form-group checkbox-group">
            <label class="checkbox-label">
              <input type="checkbox" name="privacidad" required />
              <span set:html={t('contact.privacyAccept')} />
            </label>
          </div>

          <button type="submit" class="btn btn-primary btn-submit">
            {t('contact.submitButton')}
          </button>
        </form>
      </div>
    </div>
  </Section>

  <!-- FAQ Preview -->
  <Section
    title={t('contact.faqTitle')}
    subtitle={t('contact.faqSubtitle')}
    background="lino"
  >
    <div class="faq-grid">
      <div class="faq-item">
        <h3>{t('contact.faq1Question')}</h3>
        <p>
          {t('contact.faq1Answer')}
        </p>
      </div>

      <div class="faq-item">
        <h3>{t('contact.faq2Question')}</h3>
        <p>
          {t('contact.faq2Answer')}
        </p>
      </div>

      <div class="faq-item">
        <h3>{t('contact.faq3Question')}</h3>
        <p>
          {t('contact.faq3Answer')}
        </p>
      </div>

      <div class="faq-item">
        <h3>{t('contact.faq4Question')}</h3>
        <p>
          {t('contact.faq4Answer')}
        </p>
      </div>
    </div>
  </Section>
</Layout>

<style>
  /* Contacto Container */
  .contacto-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Informaci√≥n de Contacto */
  .contacto-info h2 {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: var(--spacing-sm);
  }

  .info-description {
    font-family: var(--font-secondary);
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-gris-oscuro);
    margin-bottom: var(--spacing-lg);
  }

  .info-items {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .info-item {
    display: flex;
    gap: var(--spacing-sm);
    align-items: flex-start;
  }

  .info-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .info-content h3 {
    font-family: var(--font-primary);
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: 0.5rem;
  }

  .info-content p,
  .info-content a {
    font-family: var(--font-secondary);
    font-size: 1rem;
    color: var(--color-gris-oscuro);
    margin: 0.25rem 0;
  }

  .info-content a {
    color: var(--color-melon);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .info-content a:hover {
    color: var(--color-salvia);
  }

  .social-description {
    font-size: 0.9rem;
    color: var(--color-gris-oscuro);
    opacity: 0.8;
    margin-bottom: 1rem;
  }

  .social-links-contacto {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-link-contacto {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-salvia-dark), var(--color-melon-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: all var(--transition-normal);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .social-link-contacto:hover {
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 6px 20px rgba(168, 181, 160, 0.4);
  }

  .social-link-contacto svg {
    width: 24px;
    height: 24px;
  }

  /* Formulario */
  .contacto-form-wrapper {
    background-color: var(--color-lino);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .contacto-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-family: var(--font-primary);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-salvia);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem 1rem;
    border: 2px solid var(--color-perla);
    border-radius: var(--radius-md);
    font-family: var(--font-secondary);
    font-size: 1rem;
    color: var(--color-negro);
    background-color: var(--color-blanco);
    transition: all var(--transition-fast);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-salvia);
    box-shadow: 0 0 0 3px rgba(108, 128, 107, 0.1);
  }

  .checkbox-group {
    flex-direction: row;
    align-items: center;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-secondary);
    font-size: 0.9rem;
    color: var(--color-gris-oscuro);
    cursor: pointer;
  }

  .checkbox-label input[type="checkbox"] {
    width: auto;
    cursor: pointer;
  }

  .checkbox-label a {
    color: var(--color-melon);
    text-decoration: underline;
  }

  .btn-submit {
    width: 100%;
    margin-top: var(--spacing-sm);
  }

  .form-message {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    border-radius: var(--radius-md);
    margin-bottom: 1.5rem;
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .form-message-success {
    background-color: #d4edda;
    border: 2px solid #28a745;
    color: #155724;
  }

  .form-message-error {
    background-color: #f8d7da;
    border: 2px solid #dc3545;
    color: #721c24;
  }

  .message-icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    stroke-width: 2;
  }

  .form-message-success .message-icon { color: #28a745; }
  .form-message-error .message-icon { color: #dc3545; }

  .message-title {
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .message-text {
    font-family: var(--font-secondary);
    font-size: 0.9375rem;
    margin: 0;
    line-height: 1.5;
  }

  /* FAQ Grid */
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
  }

  .faq-item {
    background-color: var(--color-blanco);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .faq-item h3 {
    font-family: var(--font-primary);
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: 0.75rem;
  }

  .faq-item p {
    font-family: var(--font-secondary);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-gris-oscuro);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .contacto-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .contacto-form-wrapper {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const contactForm = document.getElementById('contactForm') as HTMLFormElement;
  const successMessage = document.getElementById('successMessage') as HTMLElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLElement;

  if (contactForm) {
    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = contactForm.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = submitBtn.textContent;
      successMessage.style.display = 'none';
      errorMessage.style.display = 'none';
      submitBtn.disabled = true;
      submitBtn.textContent = 'Envoi...';
      try {
        const formData = new FormData(contactForm);
        const response = await fetch('https://formspree.io/f/maqwooko', {
          method: 'POST',
          body: formData,
          headers: { 'Accept': 'application/json' }
        });
        if (response.ok) {
          successMessage.style.display = 'flex';
          contactForm.reset();
          successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        } else {
          errorMessage.style.display = 'flex';
          errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      } catch (error) {
        errorMessage.style.display = 'flex';
        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  }
</script>

