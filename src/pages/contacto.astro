---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/Hero.astro';
import Section from '@components/Section.astro';
import ContactInfo from '@components/ContactInfo.astro';
import { getLangFromUrl, useTranslations, translatePath } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('contact.title')}
  description={t('contact.description')}
>

  <!-- Hero Section -->
  <Hero
    title={t('contact.heroTitle')}
    subtitle={t('contact.heroSubtitle')}
    description={t('contact.heroDescription')}
  />

  <!-- Formulario de Contacto -->
  <Section background="blanco">
    <div class="contacto-container">
      <!-- Información de Contacto -->
      <ContactInfo />

      <!-- Formulario -->
      <div class="contacto-form-wrapper">
        <form class="contacto-form" id="contactForm">
          <div class="form-group">
            <label for="nombre">{t('contact.nameLabel')}</label>
            <input
              type="text"
              id="nombre"
              name="nombre"
              required
              placeholder={t('contact.namePlaceholder')}
            />
          </div>

          <div class="form-group">
            <label for="email">{t('contact.emailLabel')}</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder={t('contact.emailPlaceholder')}
            />
          </div>

          <div class="form-group">
            <label for="asunto">{t('contact.subjectLabel')}</label>
            <select id="asunto" name="asunto" required>
              <option value="">{t('contact.subjectPlaceholder')}</option>
              <option value="consulta-producto">{t('contact.subjectProduct')}</option>
              <option value="sugerencia">{t('contact.subjectSuggestion')}</option>
              <option value="colaboracion">{t('contact.subjectCollaboration')}</option>
              <option value="otro">{t('contact.subjectOther')}</option>
            </select>
          </div>

          <div class="form-group">
            <label for="mensaje">{t('contact.messageLabel')}</label>
            <textarea
              id="mensaje"
              name="mensaje"
              rows="6"
              required
              placeholder={t('contact.messagePlaceholder')}
            ></textarea>
          </div>

          <div class="form-group checkbox-group">
            <label class="checkbox-label">
              <input type="checkbox" name="privacidad" required />
              <span set:html={t('contact.privacyAccept')} />
            </label>
          </div>

          <button type="submit" class="btn btn-primary btn-submit">
            {t('contact.submitButton')}
          </button>
        </form>
      </div>
    </div>
  </Section>

  <!-- FAQ Preview -->
  <Section
    title={t('contact.faqTitle')}
    subtitle={t('contact.faqSubtitle')}
    background="lino"
  >
    <div class="faq-grid">
      <div class="faq-item">
        <h3>{t('contact.faq1Question')}</h3>
        <p>
          {t('contact.faq1Answer')}
        </p>
      </div>

      <div class="faq-item">
        <h3>{t('contact.faq2Question')}</h3>
        <p>
          {t('contact.faq2Answer')}
        </p>
      </div>

      <div class="faq-item">
        <h3>{t('contact.faq3Question')}</h3>
        <p>
          {t('contact.faq3Answer')}
        </p>
      </div>

      <div class="faq-item">
        <h3>{t('contact.faq4Question')}</h3>
        <p>
          {t('contact.faq4Answer')}
        </p>
      </div>
    </div>
  </Section>
</Layout>

<style>
  /* Contacto Container */
  .contacto-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Formulario */
  .contacto-form-wrapper {
    background-color: var(--color-lino);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .contacto-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-family: var(--font-primary);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-salvia);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.875rem 1rem;
    min-height: 48px;
    border: 2px solid var(--color-perla);
    border-radius: var(--radius-md);
    font-family: var(--font-secondary);
    font-size: 1rem;
    color: var(--color-negro);
    background-color: var(--color-blanco);
    transition: all var(--transition-fast);
    -webkit-tap-highlight-color: transparent;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-salvia);
    box-shadow: 0 0 0 3px rgba(108, 128, 107, 0.1);
  }

  .checkbox-group {
    flex-direction: row;
    align-items: center;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-secondary);
    font-size: 0.9rem;
    color: var(--color-gris-oscuro);
    cursor: pointer;
  }

  .checkbox-label input[type="checkbox"] {
    width: auto;
    cursor: pointer;
  }

  .checkbox-label a {
    color: var(--color-melon);
    text-decoration: underline;
  }

  .btn-submit {
    width: 100%;
    margin-top: var(--spacing-sm);
  }

  /* FAQ Grid */
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
  }

  .faq-item {
    background-color: var(--color-blanco);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .faq-item h3 {
    font-family: var(--font-primary);
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-salvia);
    margin-bottom: 0.75rem;
  }

  .faq-item p {
    font-family: var(--font-secondary);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-gris-oscuro);
  }

  /* Responsive - Mobile First */
  @media (max-width: 968px) {
    .contacto-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contacto-form-wrapper {
      order: -1;
      padding: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .contacto-container {
      gap: 1.5rem;
    }

    .contacto-form-wrapper {
      padding: 1.25rem;
    }

    .form-group label {
      font-size: 0.9375rem;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      font-size: 1rem;
      padding: 0.875rem 1rem;
    }

    .form-group textarea {
      min-height: 120px;
    }

    .submit-btn {
      width: 100%;
      padding: 1rem 2rem;
      font-size: 1rem;
    }

    .faq-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .faq-item {
      padding: 1.25rem;
    }

    .faq-item h3 {
      font-size: 1.0625rem;
    }

    .faq-item p {
      font-size: 0.9375rem;
    }
  }

  @media (max-width: 480px) {
    .contacto-form-wrapper {
      padding: 1rem;
      border-radius: 12px;
    }

    .form-group {
      gap: 0.375rem;
    }
  }
</style>

<script>
  // Form submission handler
  const contactForm = document.getElementById('contactForm');

  contactForm?.addEventListener('submit', (e) => {
    e.preventDefault();

    const formData = new FormData(contactForm as HTMLFormElement);
    const data = Object.fromEntries(formData.entries());

    // Aquí puedes agregar la lógica para enviar el formulario
    console.log('Form data:', data);

    // Mostrar mensaje de éxito (usar traducción del DOM)
    const lang = document.documentElement.lang || 'es';
    const messages: Record<string, string> = {
      es: '¡Gracias por tu mensaje! Te responderemos pronto.',
      en: 'Thank you for your message! We will respond soon.',
      pt: 'Obrigado pela sua mensagem! Responderemos em breve.',
      it: 'Grazie per il tuo messaggio! Risponderemo presto.',
      fr: 'Merci pour votre message ! Nous vous répondrons bientôt.',
      de: 'Vielen Dank für Ihre Nachricht! Wir werden bald antworten.'
    };
    alert(messages[lang] || messages.es);

    // Resetear formulario
    (contactForm as HTMLFormElement).reset();
  });
</script>

