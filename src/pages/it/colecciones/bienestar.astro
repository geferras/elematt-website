---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Hero from '../../../components/Hero.astro';
import Section from '../../../components/Section.astro';
import ProductCard from '../../../components/ProductCard.astro';

const productos = [
  {
    title: "Set de Aceites Esenciales",
    description: "Colección de aceites esenciales puros para aromaterapia y bienestar.",
    image: "/images/products/bienestar/aceites-1.jpg",
    price: "€39.99",
    amazonLink: "#",
    category: "Aromaterapia",
    featured: true,
  },
  {
    title: "Esterilla de Yoga Premium",
    description: "Esterilla antideslizante de caucho natural, perfecta para yoga y meditación.",
    image: "/images/products/bienestar/yoga-1.jpg",
    price: "€54.99",
    amazonLink: "#",
    category: "Yoga",
  },
  {
    title: "Rodillo de Jade Facial",
    description: "Rodillo facial de jade natural para masajes y cuidado de la piel.",
    image: "/images/products/bienestar/jade-1.jpg",
    price: "€24.99",
    amazonLink: "#",
    category: "Skincare",
  },
];
---

<Layout
  title="Colección Bienestar - ELEMATT"
  description="Productos naturales para cuidar de ti. Descubre nuestra selección de bienestar y autocuidado."
>
  <Header />

  <Hero
    title="Colección Bienestar"
    subtitle="Cuida de ti"
    description="Productos naturales que nutren cuerpo y alma"
  />

  <Section background="blanco" centered={true}>
    <div class="intro-content">
      <p class="intro-text">
        El bienestar comienza con pequeños rituales diarios. Nuestra colección
        reúne productos naturales que te ayudan a crear momentos de autocuidado
        y conexión contigo mismo.
      </p>
    </div>
  </Section>

  <Section
    id="productos"
    title="Productos"
    subtitle="Nuestra Selección"
    background="lino"
  >
    <div class="productos-grid">
      {productos.map((producto) => (
        <ProductCard {...producto} />
      ))}
    </div>
  </Section>

  <Section background="perla" centered={true}>
    <div class="cta-section">
      <h2>Explora más colecciones</h2>
      <a href="/colecciones" class="btn btn-primary">
        Ver todas las colecciones
      </a>
    </div>
  </Section>
</Layout>

<style>
  .intro-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .intro-text {
    font-family: var(--font-secondary);
    font-size: 1.2rem;
    line-height: 1.9;
    color: var(--color-gris-oscuro);
    text-align: center;
  }

  .productos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--spacing-lg);
  }

  .cta-section {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: center;
  }

  .cta-section h2 {
    font-family: var(--font-primary);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-salvia);
  }

  @media (max-width: 768px) {
    .productos-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

